    #if($_actions.size() >0)
    #foreach ($_action in $_actions)   
     <a href="${_action.Action}" title="${_action.Name}" class="action pageAction" ><img src="$request.contextPath/${_action.Link}" alt="${_action.Alt}" border="0" /></a>
    #end   
    #end
 </div>
#end

#macro(PortletActionBar $_decoration)
