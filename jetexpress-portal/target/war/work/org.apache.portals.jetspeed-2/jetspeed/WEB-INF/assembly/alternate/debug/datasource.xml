			<property name="schemaSql">
				<value>set current schema = xx</value>
			</property>
		</bean>
		
		<bean id="dataSourceTarget"
			class="org.springframework.jndi.JndiObjectFactoryBean">
			<property name="resourceRef">
				<value>false</value>
			</property>
			<property name="jndiName">
